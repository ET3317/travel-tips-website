
{% if error %}
    <div>{{ error.messageKey|trans(error.messageData, 'security') }}</div>
{% endif %}
<form action="{{ path('app_login') }}" method="post">
    <div>
        <label for="email" class="block mb-2 text-sm text-gray-600 dark:text-gray-200">Email Address</label>
        <input type="text" id="username" name="_username" value="{{ last_username }}" placeholder="example@example.com" class="block w-full px-4 py-2 mt-2 text-gray-700 placeholder-gray-400 bg-white border border-gray-200 rounded-md dark:placeholder-gray-600 dark:bg-gray-900 dark:text-gray-300 dark:border-gray-700 focus:border-blue-400 dark:focus:border-blue-400 focus:ring-blue-400 focus:outline-none focus:ring focus:ring-opacity-40" />
    </div>

    <div class="mt-6">
        <div class="flex flex-col justify-between mb-2">
            <input type="password" id="password" name="_password" placeholder="Your Password" class="block w-full px-4 py-2 mt-2 text-gray-700 placeholder-gray-400 bg-white border border-gray-200 rounded-md dark:placeholder-gray-600 dark:bg-gray-900 dark:text-gray-300 dark:border-gray-700 focus:border-blue-400 dark:focus:border-blue-400 focus:ring-blue-400 focus:outline-none focus:ring focus:ring-opacity-40" />
            <input type="hidden" name="_csrf_token" value="{{ csrf_token('authenticate') }}">

            <!---FORGOT PASSWORD--->
            <a href="#" class="text-sm text-gray-400 focus:text-blue-500 hover:text-blue-500 hover:underline mt-4">Forgot password?</a>
        </div>


    </div>

    <div class="mt-6">
        <button
                class="w-full px-4 py-2 tracking-wide text-white transition-colors duration-200 transform bg-gray-900 rounded-md hover:bg-blue-400 focus:outline-none focus:bg-blue-400 focus:ring focus:ring-blue-300 focus:ring-opacity-50" type="submit">
            Sign in
        </button>
    </div>

</form>

<p class="mt-6 text-sm text-center text-gray-400">Don&#x27;t have an account yet? <a href="#" class="text-gray-900 focus:outline-none focus:underline hover:underline">Sign up</a>.</p>
</div>
</div>
</div>
</div>
</div>
</body>
</html>