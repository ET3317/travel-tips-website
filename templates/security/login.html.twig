        <div class="bg-white dark:bg-gray-900">
        <div class="flex justify-center h-screen">
            <div class="hidden bg-cover bg-center lg:block lg:w-2/3" id="random-image-container">
                <div class="flex items-center h-full px-20 bg-gray-900 bg-opacity-40">
                    <div>
                        <h2 class="text-4xl font-bold text-white">Travel Tips</h2>
                        <p class="max-w-xl mt-3 text-gray-300">Travel Tips is the first social network dedicated to travel and human experiences.
                            Here in a few words and a photo you will be able to find places that will make your trip thanks to tips from the community.
                            So you too join us and share some happiness!</p>
                    </div>
                </div>
            </div>
            <!---END OF PICTURE PART----->

            <!-- Login -->
            <div class="flex items-center w-full max-w-md px-6 mx-auto lg:w-2/6">
                <div class="flex-1">
                    <div class="text-center">
                        <h2 class="text-4xl font-bold text-center text-gray-700 dark:text-white">TRAVEL TIPS</h2>

                        <p class="mt-3 text-gray-500 dark:text-gray-300">Sign in to access your account</p>
                    </div>

                    <div class="mt-8">
                        <form action="{{ path('app_login') }}" method="post">
                            <div>
                                <label for="email" class="block mb-2 text-sm text-gray-600 dark:text-gray-200">Email Address</label>
                                <input type="text" id="username" name="_username" value="{{ last_username }}" placeholder="example@example.com" class="block w-full px-4 py-2 mt-2 text-gray-700 placeholder-gray-400 bg-white border border-gray-200 rounded-md dark:placeholder-gray-600 dark:bg-gray-900 dark:text-gray-300 dark:border-gray-700 focus:border-blue-400 dark:focus:border-blue-400 focus:ring-blue-400 focus:outline-none focus:ring focus:ring-opacity-40" />
                            </div>

                            <div class="mt-6">
                                <div class="flex flex-col justify-between mb-2">
                                    <input type="password" id="password" name="_password" placeholder="Your Password" class="block w-full px-4 py-2 mt-2 text-gray-700 placeholder-gray-400 bg-white border border-gray-200 rounded-md dark:placeholder-gray-600 dark:bg-gray-900 dark:text-gray-300 dark:border-gray-700 focus:border-blue-400 dark:focus:border-blue-400 focus:ring-blue-400 focus:outline-none focus:ring focus:ring-opacity-40" />
                                    <input type="hidden" name="_csrf_token" value="{{ csrf_token('authenticate') }}">

                                    <!---FORGOT PASSWORD--->
                                    <a href="#" class="text-sm text-gray-400 focus:text-blue-500 hover:text-blue-500 hover:underline mt-4">Forgot password?</a>
                                </div>


                            </div>

                            <div class="mt-6">
                                <button
                                        class="w-full px-4 py-2 tracking-wide text-white transition-colors duration-200 transform bg-gray-900 rounded-md hover:bg-blue-400 focus:outline-none focus:bg-blue-400 focus:ring focus:ring-blue-300 focus:ring-opacity-50" type="submit">
                                    Sign in
                                </button>
                            </div>

                        </form>

                        <p class="mt-6 text-sm text-center text-gray-400">Don&#x27;t have an account yet? <a href="#" class="text-gray-900 focus:outline-none focus:underline hover:underline">Sign up</a>.</p>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <script>
        //Random Picture Register
        // Tableau d'URLs d'images
        const imageUrls = [
            '/build/img/1.jpg',
            '/build/img/2.jpg',
            '/build/img/3.jpg',
            '/build/img/4.jpg',
        ];

        // Générer un nombre aléatoire entre 0 et 3 (pour accéder au tableau)
        const randomNumber = Math.floor(Math.random() * imageUrls.length);

        // Sélectionner l'élément à mettre à jour
        const randomImageContainer = document.getElementById('random-image-container');

        // Appliquer l'URL de l'image aléatoire en tant que background-image
        randomImageContainer.style.backgroundImage = `url(${imageUrls[randomNumber]})`;
    </script>

